<%= form_with model: task do |form| %>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
    <% task.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  <div class='mt-3'>
    <%= form.label :body %><br>
    <%= form.text_area :body %><br>
    <% task.errors.full_messages_for(:body).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  <div class='mt-2' >
    <div class='flex items-center'>
      <%= form.check_box :status, {}, 'done', 'in_progress' %>
      <p class='ml-2'>Mask as Done</p>
    </div>
  </div>
  <div class='border border-black px-2 py-1 rounded-md mt-4 text-center'>
    <%= form.submit %>
  </div>
<% end %>
