<div class='w-[60%] border border-black rounded-lg p-4 m-1 flex justify-between items-center'>
  <div>
    <p><%= membership.user.email %></p>
  </div>
  <div class="flex items-center">
    <p class='text-xs cursor-pointer hover:underline'><%= link_to 'See details', user_path(membership.user) %></p>
    <% if current_user.id == membership.company.user.id %>
      <p class='mx-1 text-xs'>|</p>
      <p class='text-xs cursor-pointer hover:underline'><%= link_to 'DELETE', company_membership_path(membership.company, membership), method: :delete, data: { confirm: "Are you sure?" } %></p>
    <% end %>
  </div>
</div>
