<h1 class='text-2xl m-10 font-semibold text-center'><%= "Member of #{@company.name}" %></h1>
<div class='m-auto w-[60%] flex flex-col items-center'>
  <%= link_to "Add a new member", new_company_membership_path(@company), { class: 'text-sm border border-black mb-6 p-2 rounded-lg hover:bg-gray-100' } %>
  <% @memberships.each do |membership| %>
    <%= render 'member', membership: membership %>
  <% end %>
</div>
