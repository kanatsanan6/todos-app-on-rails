<div class='w-[100%] h-[100%] m-auto flex flex-col items-center'>
  <h1 class='text-center font-semibold text-2xl m-10 uppercase'>Membership</h1>
  <div class='border border-black rounded-lg p-4' >
    <h3 class='text-xl mb-3'>Add a new Member</h3>
    <%= form_with model: [@company, @company.memberships.build] do |form| %>
      <div class='mt-3'>
        <%= form.label :email %><br>
        <%= form.text_field :email, class: 'h-10'%><br>
      </div>
      <div class='border border-black px-2 py-1 rounded-md mt-4 text-center'>
        <%= form.submit %>
      </div>
    <% end %>
  </div>
</div>
